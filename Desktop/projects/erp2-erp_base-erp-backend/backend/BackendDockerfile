FROM python:3.9-slim

EXPOSE 8000

RUN pip config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple

COPY src /code

WORKDIR /code

RUN pip install -r /code/requirements.txt

ENTRYPOINT ["python", "/code/main.py"]